<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:src="@drawable/popup_frame">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/popuptitle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/subject_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"></Spinner>

        <Spinner
            android:id="@+id/detail_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"></Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/ok_button"
            android:layout_width="84dp"
            android:layout_height="38dp"
            android:layout_margin="10dp"
            android:background="@drawable/plusoption"
            android:padding="50dp" />

        <Button
            android:id="@+id/ok_cancel"
            android:layout_width="84dp"
            android:layout_height="38dp"
            android:background="@drawable/no_option"
            android:padding="30dp" />
    </LinearLayout>
</LinearLayout>